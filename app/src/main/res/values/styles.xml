<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#5f6cba</item>
        <item name="apcStyles">@style/AppPageControlStyle</item>
        <item name="android:textColorHint">@color/sec_frag_main_num_col</item>
    </style>

    <style name="CustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
    </style>
    <style name="AppPageControlStyle">
        <!-- To change indicator size -->
        <item name="apc_indicatorSize">4dp</item>
        <!-- To change distance between indicators -->
        <item name="apc_indicatorDistance">4dp</item>
        <!-- To change current item indicator size -->
        <item name="apc_currentIndicatorSize">4dp</item>
        <!-- To change indicator colors -->
        <item name="apc_colorCurrentDefault">#4D4D4D</item>
        <item name="apc_colorCurrentPressed">#4D4D4D</item>
        <item name="apc_colorNormalDefault">#ffffff</item>
        <item name="apc_colorNormalPressed">#ffffff</item>
    </style>

    <style name="MyEditTextTheme" >
        <!-- Used for the bottom line when not selected / focused -->
        <item name="colorControlNormal">#38000000</item>
        <item name="android:textColor">@color/sec_frag_skip_btn_col</item>
        <item name="android:textSize">16sp</item>
        <!-- colorControlActivated & colorControlHighlight use the colorAccent color by default -->
    </style>

    <style name="ToolbarColoredBackArrow" parent="AppTheme">
        <item name="android:textColorSecondary">#ffffff</item>
    </style>

    <style name="SettigsToolbarTextStyleCustom" parent="AppTheme">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="SelectableItemTheme">
        <item name="colorControlHighlight">#dfe2f1</item>
    </style>

    <style name="SelectableItemBackground">
        <item name="android:theme">@style/SelectableItemTheme</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="MyAppBarLayoutTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorControlHighlight">#dfe2f1</item>
    </style>

